<div class = "width: 100%">
  <div style = "border: 0px solid black;">
    <h2>Category Listing</h2>
    <div class = "table-responsive">
      <table class = "table table-striped table-bordered table-hover" >
        <thead>
            <tr class="table-dark">
            <th>Name</th>
            <th>ID</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.id%></td>
              <td>
                <div class = 'row'>
                  <div class = 'col-1'>
                    <%= link_to 'View', category_path(category), class: 'btn btn-info' %>
                  </div>
                  <div class = 'col-1'>
                    <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning' %>
                  </div>
                  <div class = 'col-1'>
                    <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div style = "text-align:right;padding-right:30px;">
      <%= link_to "Add new Category", new_category_path, class: 'btn btn-secondary'%>
    </div>
  </div>
</div>
